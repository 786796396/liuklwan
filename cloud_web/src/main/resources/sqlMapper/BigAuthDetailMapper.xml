<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ucap.cloud_web.dao.BigAuthDetailDao">

	<cache eviction="LRU" flushInterval="60000" size="1024" readOnly="true"/>

	<resultMap type="com.ucap.cloud_web.entity.BigAuthDetail" id="resultMap"/>

	<sql id="where">
		<where>
			
			<if test="orgSiteCode != null">
			 org_site_code =#{orgSiteCode}
			</if>
			<if test="desCode != null">
			 and des_code = #{desCode}
			</if>
			<if test="status != null">
			 	and status = #{status}
			</if>
			<if test="curDate != null">
			 <![CDATA[ and #{curDate}>=start_date and #{curDate}<=end_date]]>  
			</if>
		</where>
	</sql>

	<!-- 添加 -->
	<insert id="add" parameterType="com.ucap.cloud_web.entity.BigAuthDetail" useGeneratedKeys="true" keyProperty="id">
		insert into big_auth_detail ( 
			<if test="id != null ">id,</if>
			<if test="orgSiteCode != null ">org_site_code,</if>
			<if test="desCode != null ">des_code,</if>
			<if test="status != null ">status,</if>
			<if test="startDate != null ">start_date,</if>
			<if test="endDate != null ">end_date,</if>
			<if test="tabNameOne != null ">tab_name_one,</if>
			<if test="tabNameTwo != null ">tab_name_two,</if>
			<if test="tabNameThree != null ">tab_name_three,</if>
			<if test="focusType != null ">focus_type,</if>
			<if test="showNum != null ">show_num,</if>
			<if test="focusUrlOne != null ">focus_url_one,</if>
			<if test="focusUrlTwo != null ">focus_url_two,</if>
			<if test="focusUrlThree != null ">focus_url_three,</if>
			create_time,
			modify_time
		) values (
			<if test="id != null ">#{id},</if>
			<if test="orgSiteCode != null ">#{orgSiteCode},</if>
			<if test="desCode != null ">#{desCode},</if>
			<if test="status != null ">#{status},</if>
			<if test="startDate != null ">#{startDate},</if>
			<if test="endDate != null ">#{endDate},</if>
			<if test="tabNameOne != null ">#{tabNameOne},</if>
			<if test="tabNameTwo != null ">#{tabNameTwo},</if>
			<if test="tabNameThree != null ">#{tabNameThree},</if>
			<if test="focusType != null ">focus_type=#{focusType},</if>
			<if test="showNum != null ">show_num=#{showNum},</if>
			<if test="focusUrlOne != null ">focus_url_one=#{focusUrlOne},</if>
			<if test="focusUrlTwo != null ">focus_url_two=#{focusUrlTwo},</if>
			<if test="focusUrlThree != null ">focus_url_three=#{focusUrlThree},</if>
			now(),
			now()
		)
	</insert>

	<!-- 查询 -->
	<select id="get" parameterType="int" resultType="com.ucap.cloud_web.entity.BigAuthDetail">
		select * from big_auth_detail where id=#{id}
	</select>

	<!-- 修改 -->
	<update id="update" parameterType="com.ucap.cloud_web.entity.BigAuthDetail">
		update big_auth_detail 
			<trim prefix="SET" suffixOverrides=",">
				<if test="id != null ">id = #{id},</if>
				<if test="orgSiteCode != null ">org_site_code = #{orgSiteCode},</if>
				<if test="desCode != null ">des_code = #{desCode},</if>
				<if test="status != null ">status = #{status},</if>
				<if test="startDate != null ">start_date=#{startDate},</if>
				<if test="endDate != null ">end_date=#{endDate},</if>
				<if test="tabNameOne != null ">tab_name_one=#{tabNameOne},</if>
				<if test="tabNameTwo != null ">tab_name_two=#{tabNameTwo},</if>
				<if test="tabNameThree != null ">tab_name_three=#{tabNameThree},</if>
				<if test="focusType != null ">focus_type=#{focusType},</if>
				<if test="showNum != null ">show_num=#{showNum},</if>
				<if test="focusUrlOne != null ">focus_url_one=#{focusUrlOne},</if>
				<if test="focusUrlTwo != null ">focus_url_two=#{focusUrlTwo},</if>
				<if test="focusUrlThree != null ">focus_url_three=#{focusUrlThree},</if>
				<if test="createTime != null ">create_time = #{createTime},</if>
				<if test="modifyTime != null ">modify_time = #{modifyTime},</if>
			</trim>
			where org_site_code=#{orgSiteCode} 
	</update>

	<!-- 删除 -->
	<delete id="delete" parameterType="int">
		delete from big_auth_detail where id = #{id}
	</delete>

	<!-- 分页查询 -->
	<select id="query" parameterType="HashMap" resultMap="resultMap">
		select * from big_auth_detail
		<include refid="where"/>
		<if test="queryOrderList != null">
			order by
			<foreach collection="queryOrderList" item="queryOrder" separator=",">
				${queryOrder}
			</foreach>
		</if>
		<if test="start != null and pageSize != null">
			limit #{start}, #{pageSize}
		</if>
	</select>
	
	<select id="queryCount" parameterType="HashMap" resultType="int">
		select count(*) from big_auth_detail
		<include refid="where" />
	</select>
	
	

</mapper>
