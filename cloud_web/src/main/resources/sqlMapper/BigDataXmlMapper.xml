<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ucap.cloud_web.dao.BigDataXmlDao">

	<cache eviction="LRU" flushInterval="60000" size="1024" readOnly="true"/>

	<resultMap type="com.ucap.cloud_web.entity.BigDataXml" id="resultMap"/>

	<sql id="where">
		<where>
			1=1
			<if test="siteCode != null ">
				and site_code=#{siteCode} 
			</if>
			<if test="tabId != null ">
				and tab_id=#{tabId} 
			</if>
			<if test="createTime != null ">
				and create_time=#{createTime} 
			</if>
		</where>
	</sql>

	<!-- 添加 -->
	<insert id="add" parameterType="com.ucap.cloud_web.entity.BigDataXml" useGeneratedKeys="true" keyProperty="id">
		insert into big_data_xml ( 
			<if test="siteCode != null ">site_code,</if>
			<if test="tabId != null ">tab_id,</if>
			<if test="dataXml != null ">data_xml,</if>
			create_time,
			modify_time
		) values (
			<if test="siteCode != null ">#{siteCode},</if>
			<if test="tabId != null ">#{tabId},</if>
			<if test="dataXml != null ">#{dataXml},</if>
			curdate(),
			now()
		)
	</insert>

	<!-- 查询 -->
	<select id="get" parameterType="int" resultType="com.ucap.cloud_web.entity.BigDataXml">
		select * from big_data_xml where id=#{id}
	</select>

	<!-- 修改 -->
	<update id="update" parameterType="com.ucap.cloud_web.entity.BigDataXml">
		update big_data_xml 
			<trim prefix="SET" suffixOverrides=",">
				<if test="siteCode != null ">site_code = #{siteCode},</if>
				<if test="dataXml != null ">data_xml = #{dataXml},</if>
				create_time = now(),
				modify_time = now()
			</trim>
			where site_code = #{siteCode} 
	</update>

	<!-- 删除 -->
	<delete id="delete" parameterType="com.ucap.cloud_web.dto.BigDataXmlRequest">
		delete from big_data_xml where site_code = #{siteCode} and tab_id=#{tabId}
	</delete>

	<!-- 分页查询 -->
	<select id="query" parameterType="HashMap" resultMap="resultMap">
		select * from big_data_xml
		<include refid="where"/>
		<if test="queryOrderList != null">
			order by
			<foreach collection="queryOrderList" item="queryOrder" separator=",">
				${queryOrder}
			</foreach>
		</if>
		<if test="start != null and pageSize != null">
			limit #{start}, #{pageSize}
		</if>
	</select>
	<select id="queryCount" parameterType="HashMap" resultType="int">
		select count(*) from big_data_xml
		<include refid="where" />
	</select>
	

</mapper>
