<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ucap.cloud_web.dao.DicChannelDao">
<cache eviction="LRU" flushInterval="60000" size="1024" readOnly="true"/>
	<resultMap type="com.ucap.cloud_web.entity.DicChannel" id="resultMap"/>

	<sql id="where">
		<where>
			1=1
			<if test="channelName !=null">
				and channel_name=#{channelName}
			</if>
			<if test="parentId !=null">
				and parent_id=#{parentId}
			</if>
		</where>
	</sql>

	<!-- 添加 -->
	<insert id="add" parameterType="com.ucap.cloud_web.entity.DicChannel" useGeneratedKeys="true" keyProperty="id">
		insert into dic_channel ( 
			<if test="id != null ">id,</if>
			<if test="channelName != null ">channel_name,</if>
			<if test="parentId != null ">parent_id,</if>
			<if test="type != null ">type,</if>
			<if test="isUpdate != null ">is_update,</if>
			<if test="updateDay != null ">update_day,</if>
			create_time,
			modify_time
		) values (
			<if test="id != null ">#{id},</if>
			<if test="channelName != null ">#{channelName},</if>
			<if test="parentId != null ">#{parentId},</if>
			<if test="type != null ">type,</if>
			<if test="isUpdate != null ">#{isUpdate},</if>
			<if test="updateDay != null ">updateDay,</if>
			now(),
			now()
		)
	</insert>

	<!-- 查询 -->
	<select id="get" parameterType="int" resultType="com.ucap.cloud_web.entity.DicChannel">
		select * from dic_channel where id=#{id}
	</select>

	<!-- 修改 -->
	<update id="update" parameterType="com.ucap.cloud_web.entity.DicChannel">
		update dic_channel 
			<trim prefix="SET" suffixOverrides=",">
				<if test="id != null ">id = #{id},</if>
				<if test="channelName != null ">channel_name = #{channelName},</if>
				<if test="parentId != null ">parent_id = #{parentId},</if>
				<if test="type != null ">type = #{type},</if>
				<if test="isUpdate != null ">is_update = #{isUpdate},</if>
				<if test="updateDay != null ">update_day = #{updateDay},</if>
				<if test="createTime != null ">create_time = #{createTime},</if>
				<if test="modifyTime != null ">modify_time = #{modifyTime},</if>
			</trim>
			where id=#{id} 
	</update>

	<!-- 分页查询 -->
	<select id="query" parameterType="HashMap" resultMap="resultMap">
		select * from dic_channel
		<include refid="where"/>
		<if test="queryOrderList != null">
			order by
			<foreach collection="queryOrderList" item="queryOrder" separator=",">
				${queryOrder}
			</foreach>
		</if>
		<if test="start != null and pageSize != null">
			limit #{start}, #{pageSize}
		</if>
	</select>
	<select id="queryCount" parameterType="HashMap" resultType="int">
		select count(*) from dic_channel
		<include refid="where" />
	</select>
	

</mapper>
