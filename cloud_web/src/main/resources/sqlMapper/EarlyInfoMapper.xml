<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ucap.cloud_web.dao.EarlyInfoDao">
	<resultMap type="com.ucap.cloud_web.entity.EarlyInfo" id="resultMap"/>
	<sql id="where">
		<where>
			1=1
			<if test="type !=null">
				and type = #{type}
			</if>
			<if test="checkType !=null">
				and check_type=#{checkType}
			</if>
			<if test="servicePeriodId !=null">
				and service_period_id=#{servicePeriodId}
			</if>
			<if test="newEarlyNum !=null">
				and new_early_num >0
			</if>
			<if test="typeIn !=null">
				and type in (${typeIn})
			</if>
			<if test="databaseInfoList !=null">
				and site_code in 
				<foreach collection="databaseInfoList" item="item" open="(" separator="," close=")">
					#{item.siteCode}
				</foreach>
			</if>
			<if test="siteCode !=null">
				and site_code like '${siteCode}%'
			</if>
			<if test="siteCode1 !=null">
				and site_code = #{siteCode1}
			</if>
			<if test="orgId !=null">
				and site_code like '${orgId}%'
			</if>
			<if test="newDate !=null">
				and create_time like '${newDate}%'
			</if>
		</where>
	</sql>

	<!-- 添加 -->
	<insert id="add" parameterType="com.ucap.cloud_web.entity.EarlyInfo" useGeneratedKeys="true" keyProperty="id">
		insert into early_info ( 
			<if test="id != null ">id,</if>
			<if test="siteCode != null ">site_code,</if>
			<if test="siteName != null ">site_name,</if>
			<if test="earlyLevel != null ">early_level,</if>
			<if test="newEarlyNum != null ">new_early_num,</if>
			<if test="earlySum != null ">early_sum,</if>
			<if test="type != null ">type,</if>
			<if test="updateGradeType != null ">update_grade_type,</if>
			<if test="state != null ">state,</if>
			<if test="servicePeriodId != null ">service_period_id,</if>
			create_time
		) values (
			<if test="id != null ">#{id},</if>
			<if test="siteCode != null ">#{siteCode},</if>
			<if test="siteName != null ">#{siteName},</if>
			<if test="earlyLevel != null ">#{earlyLevel},</if>
			<if test="newEarlyNum != null ">#{newEarlyNum},</if>
			<if test="earlySum != null ">#{earlySum},</if>
			<if test="type != null ">#{type},</if>
			<if test="updateGradeType != null ">#{updateGradeType},</if>
			<if test="state != null ">#{state},</if>
			<if test="servicePeriodId != null ">#{servicePeriodId},</if>
			now()
		)
	</insert>

	<!-- 查询 -->
	<select id="get" parameterType="int" resultType="com.ucap.cloud_web.entity.EarlyInfo">
		select * from early_info where id=#{id}
	</select>

	<!-- 修改 -->
	<update id="update" parameterType="com.ucap.cloud_web.entity.EarlyInfo">
		update early_info 
			<trim prefix="SET" suffixOverrides=",">
				<if test="id != null ">id = #{id},</if>
				<if test="siteCode != null ">site_code = #{siteCode},</if>
				<if test="siteName != null ">site_name = #{siteName},</if>
				<if test="earlyLevel != null ">early_level = #{earlyLevel},</if>
				<if test="newEarlyNum != null ">new_early_num = #{newEarlyNum},</if>
				<if test="earlySum != null ">early_sum = #{earlySum},</if>
				<if test="type != null ">type = #{type},</if>
				<if test="updateGradeType != null ">update_grade_type = #{updateGradeType},</if>
				<if test="state != null ">state = #{state},</if>
				<if test="servicePeriodId != null ">service_period_id=#{servicePeriodId},</if>
				<if test="createTime != null ">create_time = #{createTime},</if>
			</trim>
			where id=#{id} 
	</update>
	<!-- 更新新预警数-->
	<update id="updateNewEarlyNum" parameterType="com.ucap.cloud_web.entity.EarlyInfo">
		update early_info 
			<trim prefix="SET" suffixOverrides=",">
				<if test="newEarlyNum != null ">new_early_num = #{newEarlyNum},</if>
			</trim>
			where site_code=#{siteCode} 
	</update>


	<!-- 删除 -->
	<delete id="delete" parameterType="int">
		delete from early_info where id = #{id}
	</delete>

	<!-- 分页查询 -->
	<select id="query" parameterType="HashMap" resultMap="resultMap">
		select * from early_info
		<include refid="where"/>
		<if test="queryOrderList != null">
			order by
			<foreach collection="queryOrderList" item="queryOrder" separator=",">
				${queryOrder}
			</foreach>
		</if>
		<if test="start != null and pageSize != null">
			limit #{start}, #{pageSize}
		</if>
	</select>
	
	<select id="queryEarlyInfo" parameterType="HashMap" resultMap="resultMap">
		select id,site_code,site_name,early_level,sum(new_early_num) as new_early_num,type,sum(early_sum) as early_sum,check_type,spot_check_schedule,state,create_time 
		from early_info
		<include refid="where"/>
		group by site_code
		<if test="queryOrderList != null">
			order by
			<foreach collection="queryOrderList" item="queryOrder" separator=",">
				${queryOrder}
			</foreach>
		</if>
		<if test="start != null and pageSize != null">
			limit #{start}, #{pageSize}
		</if>
	</select>
	<select id="queryEarlyInfoCount" parameterType="HashMap" resultType="int">
		select count(1) from (select count(1) from early_info 
		<include refid="where" />
		group by site_code) a
	</select>
	
	<select id="queryCount" parameterType="HashMap" resultType="int">
		select count(*) from early_info
		<include refid="where" />
	</select>
	
	<!--组织机构查询预警信息  -->
	<select id="queryByMap" parameterType="HashMap" resultMap="resultMap">
		select * from early_info
		<include refid="where" />
	</select>
	
	<select id="querySum" parameterType="HashMap" resultType="com.ucap.cloud_web.entity.EarlyInfo">
		select sum(new_early_num) as newEarlyNum from early_info 
		<include refid="where" />
	</select>


	<select id="queryNewEarlyNum" parameterType="HashMap" resultType="com.ucap.cloud_web.entity.EarlyInfo">
		select sum(new_early_num) as newEarlyNum,site_code,sum(early_sum) as early_sum from early_info 
		<include refid="where" />
		group by site_code
	</select>
</mapper>
