<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ucap.cloud_web.dao.PaAdviceDetailDao">

	<cache eviction="LRU" flushInterval="60000" size="1024" readOnly="true"/>

	<resultMap type="com.ucap.cloud_web.entity.PaAdviceDetail" id="resultMap"/>

	<sql id="where">
		<where>
			1=1 
			<if test="adviceId != null ">
			and advice_id = #{adviceId} 
			</if>
		</where>
	</sql>

	<!-- 添加 -->
	<insert id="add" parameterType="com.ucap.cloud_web.entity.PaAdviceDetail" useGeneratedKeys="true" keyProperty="id">
		insert into pa_advice_detail ( 
			<if test="id != null ">id,</if>
			<if test="adviceId != null ">advice_id,</if>
			<if test="content != null ">content,</if>
			<if test="state != null ">state,</if>
			<if test="adviceState != null ">advice_state,</if>
			<if test="userId != null ">user_id,</if>
			<if test="name != null ">name,</if>
			create_time,
			modify_time
		) values (
			<if test="id != null ">#{id},</if>
			<if test="adviceId != null ">#{adviceId},</if>
			<if test="content != null ">#{content},</if>
			<if test="state != null ">#{state},</if>
			<if test="adviceState != null ">#{adviceState},</if>
			<if test="userId != null ">#{userId},</if>
			<if test="name != null ">#{name},</if>
			now(),
			now()
		)
	</insert>

	<!-- 查询 -->
	<select id="get" parameterType="int" resultType="com.ucap.cloud_web.entity.PaAdviceDetail">
		select * from pa_advice_detail where id=#{id}
	</select>

	<!-- 修改 -->
	<update id="update" parameterType="com.ucap.cloud_web.entity.PaAdviceDetail">
		update pa_advice_detail 
			<trim prefix="SET" suffixOverrides=",">
				<if test="id != null ">id = #{id},</if>
				<if test="adviceId != null ">advice_id = #{adviceId},</if>
				<if test="content != null ">content = #{content},</if>
				<if test="state != null ">state = #{state},</if>
				<if test="adviceState != null ">advice_state = #{adviceState},</if>
				<if test="userId != null ">user_id = #{userId},</if>
				<if test="name != null ">name = #{name},</if>
				<if test="createTime != null ">create_time = #{createTime},</if>
				<if test="modifyTime != null ">modify_time = #{modifyTime},</if>
			</trim>
			where id=#{id} 
	</update>

	<!-- 删除 -->
	<delete id="delete" parameterType="int">
		delete from pa_advice_detail where id = #{id}
	</delete>

	<!-- 分页查询 -->
	<select id="query" parameterType="HashMap" resultMap="resultMap">
		select * from pa_advice_detail
		<include refid="where"/>
		<if test="queryOrderList != null">
			order by
			<foreach collection="queryOrderList" item="queryOrder" separator=",">
				${queryOrder}
			</foreach>
		</if>
		<if test="start != null and pageSize != null">
			limit #{start}, #{pageSize}
		</if>
	</select>
	<select id="queryCount" parameterType="HashMap" resultType="int">
		select count(*) from pa_advice_detail
		<include refid="where" />
	</select>
	

</mapper>
