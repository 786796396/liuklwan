<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ucap.cloud_web.dao.PaAdviceDao">

	<cache eviction="LRU" flushInterval="60000" size="1024" readOnly="true"/>

	<resultMap type="com.ucap.cloud_web.entity.PaAdvice" id="resultMap"/>

	<sql id="where">
		<where>
			1=1
		<if test="siteCode != null">
			and site_code = #{siteCode}
		</if>
		</where>
	</sql>

	<!-- 添加 -->
	<insert id="add" parameterType="com.ucap.cloud_web.entity.PaAdvice" useGeneratedKeys="true" keyProperty="id">
		insert into pa_advice ( 
			<if test="id != null ">id,</if>
			<if test="siteCode != null ">site_code,</if>
			<if test="title != null ">title,</if>
			<if test="content != null ">content,</if>
			<if test="noReadNum != null ">no_read_num,</if>
			<if test="backNoReadNum != null ">back_no_read_num,</if>
			<if test="senderName != null ">sender_name,</if>
			<if test="senderPhone != null ">sender_phone,</if>
			<if test="senderEmail != null ">sender_email,</if>
			create_time
		) values (
			<if test="id != null ">#{id},</if>
			<if test="siteCode != null ">#{siteCode},</if>
			<if test="title != null ">#{title},</if>
			<if test="content != null ">#{content},</if>
			<if test="noReadNum != null ">#{noReadNum},</if>
			<if test="backNoReadNum != null ">#{backNoReadNum},</if>
			<if test="senderName != null ">#{senderName},</if>
			<if test="senderPhone != null ">#{senderPhone},</if>
			<if test="senderEmail != null ">#{senderEmail},</if>
			now()
		)
	</insert>

	<!-- 查询 -->
	<select id="get" parameterType="int" resultType="com.ucap.cloud_web.entity.PaAdvice">
		select * from pa_advice where id=#{id}
	</select>

	<!-- 修改 -->
	<update id="update" parameterType="com.ucap.cloud_web.entity.PaAdvice">
		update pa_advice 
			<trim prefix="SET" suffixOverrides=",">
				<if test="id != null ">id = #{id},</if>
				<if test="siteCode != null ">site_code = #{siteCode},</if>
				<if test="title != null ">title = #{title},</if>
				<if test="content != null ">content = #{content},</if>
				<if test="noReadNum != null ">no_read_num = #{noReadNum},</if>
				<if test="backNoReadNum != null ">back_no_read_num = #{backNoReadNum},</if>
				<if test="senderName != null ">sender_name = #{senderName},</if>
				<if test="senderPhone != null ">sender_phone = #{senderPhone},</if>
				<if test="senderEmail != null ">sender_email = #{senderEmail},</if>
				<if test="createTime != null ">create_time = #{createTime},</if>
			</trim>
			where id=#{id} 
	</update>
	<!-- 修改 -->
	<update id="updateById" parameterType="com.ucap.cloud_web.dto.PaAdviceRequest">
		update pa_advice 
			<trim prefix="SET" suffixOverrides=",">
				<if test="id != null ">id = #{id},</if>
				<if test="siteCode != null ">site_code = #{siteCode},</if>
				<if test="title != null ">title = #{title},</if>
				<if test="content != null ">content = #{content},</if>
				<if test="noReadNum != null ">no_read_num = #{noReadNum},</if>
				<if test="backNoReadNum != null ">back_no_read_num = #{backNoReadNum},</if>
				<if test="senderName != null ">sender_name = #{senderName},</if>
				<if test="senderPhone != null ">sender_phone = #{senderPhone},</if>
				<if test="senderEmail != null ">sender_email = #{senderEmail},</if>
				<if test="createTime != null ">create_time = #{createTime},</if>
			</trim>
			where id=#{id} 
	</update>
	<!-- 删除 -->
	<delete id="delete" parameterType="int">
		delete from pa_advice where id = #{id}
	</delete>

	<!-- 分页查询 -->
	<select id="query" parameterType="HashMap" resultMap="resultMap">
		select * from pa_advice
		<include refid="where"/>
		<if test="queryOrderList != null">
			order by
			<foreach collection="queryOrderList" item="queryOrder" separator=",">
				${queryOrder}
			</foreach>
		</if>
		<if test="start != null and pageSize != null">
			limit #{start}, #{pageSize}
		</if>
	</select>
	<select id="queryCount" parameterType="HashMap" resultType="int">
		select count(*) from pa_advice
		<include refid="where" />
	</select>
	

</mapper>
