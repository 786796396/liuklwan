<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ucap.cloud_web.dao.PaAppraisalDao">

	<cache eviction="LRU" flushInterval="60000" size="1024" readOnly="true"/>

	<resultMap type="com.ucap.cloud_web.entity.PaAppraisal" id="resultMap"/>

	<sql id="where">
		<where>
			1=1
			<if test="projectId != null ">
				and project_id = #{projectId}  
			</if>
		</where>
	</sql>

	<!-- 添加 -->
	<insert id="add" parameterType="com.ucap.cloud_web.entity.PaAppraisal" useGeneratedKeys="true" keyProperty="id">
		insert into pa_appraisal ( 
			<if test="id != null ">id,</if>
			<if test="projectId != null ">project_id,</if>
			<if test="name != null ">name,</if>
			<if test="siteCount != null ">site_count,</if>
			<if test="newSiteCount != null ">new_site_count,</if>
			<if test="userId != null ">user_id,</if>
			<if test="modifyUserId != null ">modify_user_id,</if>
			create_time,
			modify_time
		) values (
			<if test="id != null ">#{id},</if>
			<if test="projectId != null ">#{projectId},</if>
			<if test="name != null ">#{name},</if>
			<if test="siteCount != null ">#{siteCount},</if>
			<if test="newSiteCount != null ">#{newSiteCount},</if>
			<if test="userId != null ">#{userId},</if>
			<if test="modifyUserId != null ">#{modifyUserId},</if>
			now(),
			now()
		)
	</insert>

	<!-- 查询 -->
	<select id="get" parameterType="int" resultType="com.ucap.cloud_web.entity.PaAppraisal">
		select * from pa_appraisal where id=#{id}
	</select>

	<!-- 修改 -->
	<update id="update" parameterType="com.ucap.cloud_web.entity.PaAppraisal">
		update pa_appraisal 
			<trim prefix="SET" suffixOverrides=",">
				<if test="id != null ">id = #{id},</if>
				<if test="projectId != null ">project_id = #{projectId},</if>
				<if test="name != null ">name = #{name},</if>
				<if test="siteCount != null ">site_count = #{siteCount},</if>
				<if test="newSiteCount != null ">new_site_count = #{newSiteCount},</if>
				<if test="userId != null ">user_id = #{userId},</if>
				<if test="modifyUserId != null ">modify_user_id = #{modifyUserId},</if>
				<if test="createTime != null ">create_time = #{createTime},</if>
				<if test="modifyTime != null ">modify_time = #{modifyTime},</if>
			</trim>
			where id=#{id} 
	</update>

	<!-- 删除 -->
	<delete id="delete" parameterType="int">
		delete from pa_appraisal where id = #{id}
	</delete>

	<!-- 分页查询 -->
	<select id="query" parameterType="HashMap" resultMap="resultMap">
		select * from pa_appraisal
		<include refid="where"/>
		<if test="queryOrderList != null">
			order by
			<foreach collection="queryOrderList" item="queryOrder" separator=",">
				${queryOrder}
			</foreach>
		</if>
		<if test="start != null and pageSize != null">
			limit #{start}, #{pageSize}
		</if>
	</select>
	<select id="queryCount" parameterType="HashMap" resultType="int">
		select count(*) from pa_appraisal
		<include refid="where" />
	</select>
	

</mapper>
