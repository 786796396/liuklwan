<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ucap.cloud_web.dao.PaProjectDao">

	<cache eviction="LRU" flushInterval="60000" size="1024" readOnly="true"/>

	<resultMap type="com.ucap.cloud_web.entity.PaProject" id="resultMap"/>

	<sql id="where">
		<where>
			1=1
			<if test="siteCode != null ">
			and site_code = #{siteCode}
			</if>
		</where>
	</sql>

	<!-- 添加 -->
	<insert id="add" parameterType="com.ucap.cloud_web.entity.PaProject" useGeneratedKeys="true" keyProperty="id">
		insert into pa_project ( 
			<if test="id != null ">id,</if>
			<if test="defectId != null ">defect_id,</if>
			<if test="siteCode != null ">site_code,</if>
			<if test="projectName != null ">project_name,</if>
			<if test="projectYear != null ">project_year,</if>
			<if test="chargeDepartment != null ">charge_department,</if>
			<if test="director != null ">director,</if>
			<if test="directorPhone != null ">director_phone,</if>
			<if test="userId != null ">user_id,</if>
			<if test="modifyUserId != null ">modify_user_id,</if>
			create_time,
			modify_time
		) values (
			<if test="id != null ">#{id},</if>
			<if test="defectId != null ">#{defectId},</if>
			<if test="siteCode != null ">#{siteCode},</if>
			<if test="projectName != null ">#{projectName},</if>
			<if test="projectYear != null ">#{projectYear},</if>
			<if test="chargeDepartment != null ">#{chargeDepartment},</if>
			<if test="director != null ">#{director},</if>
			<if test="directorPhone != null ">#{directorPhone},</if>
			<if test="userId != null ">#{userId},</if>
			<if test="modifyUserId != null ">#{modifyUserId},</if>
			now(),
			now()
		)
	</insert>

	<!-- 查询 -->
	<select id="get" parameterType="int" resultType="com.ucap.cloud_web.entity.PaProject">
		select * from pa_project where id=#{id}
	</select>

	<!-- 修改 -->
	<update id="update" parameterType="com.ucap.cloud_web.entity.PaProject">
		update pa_project 
			<trim prefix="SET" suffixOverrides=",">
				<if test="id != null ">id = #{id},</if>
				<if test="defectId != null ">defect_id = #{defectId},</if>
				<if test="siteCode != null ">site_code = #{siteCode},</if>
				<if test="projectName != null ">project_name = #{projectName},</if>
				<if test="projectYear != null ">project_year = #{projectYear},</if>
				<if test="chargeDepartment != null ">charge_department = #{chargeDepartment},</if>
				<if test="director != null ">director = #{director},</if>
				<if test="directorPhone != null ">director_phone = #{directorPhone},</if>
				<if test="userId != null ">user_id = #{userId},</if>
				<if test="modifyUserId != null ">modify_user_id = #{modifyUserId},</if>
				<if test="createTime != null ">create_time = #{createTime},</if>
				<if test="modifyTime != null ">modify_time = #{modifyTime},</if>
			</trim>
			where id=#{id} 
	</update>

	<!-- 删除 -->
	<delete id="delete" parameterType="int">
		delete from pa_project where id = #{id}
	</delete>

	<!-- 分页查询 -->
	<select id="query" parameterType="HashMap" resultMap="resultMap">
		select * from pa_project
		<include refid="where"/>
		<if test="queryOrderList != null">
			order by
			<foreach collection="queryOrderList" item="queryOrder" separator=",">
				${queryOrder}
			</foreach>
		</if>
		<if test="start != null and pageSize != null">
			limit #{start}, #{pageSize}
		</if>
	</select>
	<select id="queryCount" parameterType="HashMap" resultType="int">
		select count(*) from pa_project
		<include refid="where" />
	</select>
	
	<select id="queryTaskList" parameterType="HashMap" resultType="com.ucap.cloud_web.entity.PaTask">
		select t.*,p.project_name projectName from pa_project p 
		join pa_task t on p.id = t.project_id where p.site_code = #{siteCode} and t.stauts != 1 and t.is_display = 1 and t.del_flag = 2
	</select>
</mapper>
