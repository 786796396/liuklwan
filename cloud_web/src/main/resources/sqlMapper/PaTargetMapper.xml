<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ucap.cloud_web.dao.PaTargetDao">

	<!-- <cache eviction="LRU" flushInterval="60000" size="1024" readOnly="true"/> -->

	<resultMap type="com.ucap.cloud_web.entity.PaTarget" id="resultMap"/>

	<sql id="where">
		<where>
			1=1
			
		</where>
	</sql>

	<!-- 添加 -->
	<insert id="add" parameterType="com.ucap.cloud_web.entity.PaTarget" useGeneratedKeys="true" keyProperty="id">
		insert into pa_target ( 
			<if test="id != null ">id,</if>
			<if test="appraisalId != null ">appraisal_id,</if>
			<if test="siteCode != null ">site_code,</if>
			<if test="siteName != null ">site_name,</if>
			<if test="indexUrl != null ">index_url,</if>
			<if test="isExist != null ">is_exist,</if>
			create_time,
			modify_time
		) values (
			<if test="id != null ">#{id},</if>
			<if test="appraisalId != null ">#{appraisalId},</if>
			<if test="siteCode != null ">#{siteCode},</if>
			<if test="siteName != null ">#{siteName},</if>
			<if test="indexUrl != null ">#{indexUrl},</if>
			<if test="isExist != null ">#{isExist},</if>
			now(),
			now()
		)
	</insert>

	<!-- 查询 -->
	<select id="get" parameterType="int" resultType="com.ucap.cloud_web.entity.PaTarget">
		select * from pa_target where id=#{id}
	</select>

	<!-- 修改 -->
	<update id="update" parameterType="com.ucap.cloud_web.entity.PaTarget">
		update pa_target 
			<trim prefix="SET" suffixOverrides=",">
				<if test="id != null ">id = #{id},</if>
				<if test="appraisalId != null ">appraisal_id = #{appraisalId},</if>
				<if test="siteCode != null ">site_code = #{siteCode},</if>
				<if test="siteName != null ">site_name = #{siteName},</if>
				<if test="indexUrl != null ">index_url = #{indexUrl},</if>
				<if test="isExist != null ">is_exist = #{isExist},</if>
				<if test="createTime != null ">create_time = #{createTime},</if>
				<if test="modifyTime != null ">modify_time = #{modifyTime},</if>
			</trim>
			where id=#{id} 
	</update>

	<!-- 删除 -->
	<delete id="delete" parameterType="int">
		delete from pa_target where id = #{id}
	</delete>

	<!-- 分页查询 -->
	<select id="query" parameterType="HashMap" resultMap="resultMap">
		select * from pa_target
		<include refid="where"/>
		<if test="queryOrderList != null">
			order by
			<foreach collection="queryOrderList" item="queryOrder" separator=",">
				${queryOrder}
			</foreach>
		</if>
		<if test="start != null and pageSize != null">
			limit #{start}, #{pageSize}
		</if>
	</select>
	<select id="queryCount" parameterType="HashMap" resultType="int">
		select count(*) from pa_target
		<include refid="where" />
	</select>
	
	<select id="queryByIdss" parameterType="HashMap" resultType="com.ucap.cloud_web.entity.PaTarget">
		select t.id,p.id paTargetTaskId ,t.site_code,t.site_name,p.rating_state,p.appraisal_state,p.is_open 
		from  pa_target_task p 
		join pa_target t on p.target_id = t.id
		where p.task_id = #{taskId} and p.appraisal_id = #{appraisalId} and p.stauts=1
		<if test="appraisalState != null">
			and p.appraisal_state = #{appraisalState}
		</if>
		<if test="siteOrName != null">
			and (t.site_code like '${siteOrName}%' or t.site_name like '%${siteOrName}%')
		</if>
	</select>

</mapper>
