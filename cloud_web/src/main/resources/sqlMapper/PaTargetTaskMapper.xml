<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ucap.cloud_web.dao.PaTargetTaskDao">

	<!-- <cache eviction="LRU" flushInterval="60000" size="1024" readOnly="true"/>
 -->
	<resultMap type="com.ucap.cloud_web.entity.PaTargetTask" id="resultMap"/>

	<sql id="where">
		<where>
		1=1
			<if test="siteCode != null">
				and site_code = #{siteCode}
			</if>
			<if test="taskId != null">
				and task_id = #{taskId}
			</if>
			<if test="ratingState != null">
				and rating_state = #{ratingState}
			</if>
			<if test="stauts != null">
				and stauts = #{stauts}
			</if>
		</where>
	</sql>

	<!-- 添加 -->
	<insert id="add" parameterType="com.ucap.cloud_web.entity.PaTargetTask" useGeneratedKeys="true" keyProperty="id">
		insert into pa_target_task ( 
			<if test="id != null ">id,</if>
			<if test="taskId != null ">task_id,</if>
			<if test="targetId != null ">target_id,</if>
			<if test="siteCode != null ">site_code,</if>
			<if test="ratingState != null ">rating_state,</if>
			<if test="appraisalState != null ">appraisal_state,</if>
			<if test="stauts != null ">stauts,</if>
			<if test="isExist != null ">is_exist,</if>
			<if test="isOpen != null ">is_open,</if>
			<if test="createReportPath != null ">create_report_path,</if>
			<if test="ratingReportPath != null ">rating_report_path,</if>
			
			
			<if test="uploadReportPath != null ">upload_report_path,</if>
			<if test="ratingProgress != null ">rating_progress,</if>
			<if test="markProgress != null ">mark_progress,</if>
			create_time,
			modify_time
		) values (
			<if test="id != null ">#{id},</if>
			<if test="taskId != null ">#{taskId},</if>
			<if test="targetId != null ">#{targetId},</if>
			<if test="siteCode != null ">#{siteCode},</if>
			<if test="ratingState != null ">#{ratingState},</if>
			<if test="appraisalState != null ">#{appraisalState},</if>
			<if test="stauts != null ">#{stauts},</if>
			<if test="isExist != null ">#{isExist},</if>
			<if test="isOpen != null ">#{isOpen},</if>
			<if test="createReportPath != null ">#{createReportPath},</if>
			<if test="ratingReportPath != null ">#{ratingReportPath},</if>
			
			
			<if test="uploadReportPath != null ">#{uploadReportPath},</if>
			<if test="ratingProgress != null ">#{ratingProgress},</if>
			<if test="markProgress != null ">#{markProgress},</if>
			now(),
			now()
		)
	</insert>

	<!-- 查询 -->
	<select id="get" parameterType="int" resultType="com.ucap.cloud_web.entity.PaTargetTask">
		select * from pa_target_task where id=#{id}
	</select>

	<!-- 修改 -->
	<update id="update" parameterType="com.ucap.cloud_web.entity.PaTargetTask">
		update pa_target_task 
			<trim prefix="SET" suffixOverrides=",">
				<if test="id != null ">id = #{id},</if>
				<if test="taskId != null ">task_id = #{taskId},</if>
				<if test="targetId != null ">target_id = #{targetId},</if>
				<if test="siteCode != null ">site_code = #{siteCode},</if>
				<if test="ratingState != null ">rating_state = #{ratingState},</if>
				<if test="appraisalState != null ">appraisal_state = #{appraisalState},</if>
				<if test="stauts != null ">stauts = #{stauts},</if>
				<if test="isExist != null ">is_exist = #{isExist},</if>
				<if test="isOpen != null ">is_open = #{isOpen},</if>
				<if test="createReportPath != null ">create_report_path = #{createReportPath},</if>
				<if test="ratingReportPath != null ">rating_report_path = #{ratingReportPath},</if>
				<if test="uploadReportPath != null ">upload_report_path = #{uploadReportPath},</if>
				<if test="ratingProgress != null ">rating_progress = #{ratingProgress},</if>
				<if test="markProgress != null ">mark_progress = #{markProgress},</if>
				<if test="createTime != null ">create_time = #{createTime},</if>
				<if test="modifyTime != null ">modify_time = #{modifyTime},</if>
			</trim>
			where id=#{id} 
	</update>

	<!-- 删除 -->
	<delete id="delete" parameterType="int">
		delete from pa_target_task where id = #{id}
	</delete>

	<!-- 分页查询 -->
	<select id="query" parameterType="HashMap" resultMap="resultMap">
		select * from pa_target_task
		<include refid="where"/>
		<if test="queryOrderList != null">
			order by
			<foreach collection="queryOrderList" item="queryOrder" separator=",">
				${queryOrder}
			</foreach>
		</if>
		<if test="start != null and pageSize != null">
			limit #{start}, #{pageSize}
		</if>
	</select>
	<select id="queryCount" parameterType="HashMap" resultType="int">
		select count(*) from pa_target_task
		<include refid="where" />
	</select>
	

</mapper>
