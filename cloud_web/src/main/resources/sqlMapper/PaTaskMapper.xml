<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ucap.cloud_web.dao.PaTaskDao">

<!-- 	<cache eviction="LRU" flushInterval="60000" size="1024" readOnly="true"/> -->

	<resultMap type="com.ucap.cloud_web.entity.PaTask" id="resultMap"/>

	<sql id="where">
		<where>
			1=1
			
		</where>
	</sql>

	<!-- 添加 -->
	<insert id="add" parameterType="com.ucap.cloud_web.entity.PaTask" useGeneratedKeys="true" keyProperty="id">
		insert into pa_task ( 
			<if test="id != null ">id,</if>
			<if test="projectId != null ">project_id,</if>
			<if test="taskName != null ">task_name,</if>
			<if test="startDate != null ">start_date,</if>
			<if test="endDate != null ">end_date,</if>
			<if test="stauts != null ">stauts,</if>
			<if test="ratingProgress != null ">rating_progress,</if>
			<if test="markProgress != null ">mark_progress,</if>
			create_time,
			modify_time
		) values (
			<if test="id != null ">#{id},</if>
			<if test="projectId != null ">#{projectId},</if>
			<if test="taskName != null ">#{taskName},</if>
			<if test="startDate != null ">#{startDate},</if>
			<if test="endDate != null ">#{endDate},</if>
			<if test="stauts != null ">#{stauts},</if>
			<if test="ratingProgress != null ">#{ratingProgress},</if>
			<if test="markProgress != null ">#{markProgress},</if>
			now(),
			now()
		)
	</insert>

	<!-- 查询 -->
	<select id="get" parameterType="int" resultType="com.ucap.cloud_web.entity.PaTask">
		select * from pa_task where id=#{id}
	</select>

	<!-- 修改 -->
	<update id="update" parameterType="com.ucap.cloud_web.entity.PaTask">
		update pa_task 
			<trim prefix="SET" suffixOverrides=",">
				<if test="id != null ">id = #{id},</if>
				<if test="projectId != null ">project_id = #{projectId},</if>
				<if test="taskName != null ">task_name = #{taskName},</if>
				<if test="startDate != null ">start_date = #{startDate},</if>
				<if test="endDate != null ">end_date = #{endDate},</if>
				<if test="stauts != null ">stauts = #{stauts},</if>
				<if test="ratingProgress != null ">rating_progress = #{ratingProgress},</if>
				<if test="markProgress != null ">mark_progress = #{markProgress},</if>
				<if test="createTime != null ">create_time = #{createTime},</if>
				<if test="modifyTime != null ">modify_time = #{modifyTime},</if>
			</trim>
			where id=#{id} 
	</update>

	<!-- 删除 -->
	<delete id="delete" parameterType="int">
		delete from pa_task where id = #{id}
	</delete>

	<!-- 分页查询 -->
	<select id="query" parameterType="HashMap" resultMap="resultMap">
		select * from pa_task
		<include refid="where"/>
		<if test="queryOrderList != null">
			order by
			<foreach collection="queryOrderList" item="queryOrder" separator=",">
				${queryOrder}
			</foreach>
		</if>
		<if test="start != null and pageSize != null">
			limit #{start}, #{pageSize}
		</if>
	</select>
	<select id="queryCount" parameterType="HashMap" resultType="int">
		select count(*) from pa_task
		<include refid="where" />
	</select>
	
	<select id="queryJoinTarget" parameterType="HashMap" resultType="com.ucap.cloud_web.entity.PaTask">
		select t.*,o.rating_state ratingState ,o.id targetTaskId ,o.appraisal_id appraisalId,o.is_open isOpen
		from pa_target_task o 
		  join pa_task t on   o.task_id = t.id 
		where  site_code =#{siteCode}  and t.stauts != 1 and o.stauts = 1 and t.del_flag =2 and   t.is_display = 1
		
	</select>

</mapper>
