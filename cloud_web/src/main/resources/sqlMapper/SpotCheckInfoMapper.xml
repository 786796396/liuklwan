<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ucap.cloud_web.dao.SpotCheckInfoDao">

	<cache eviction="LRU" flushInterval="60000" size="1024" readOnly="true"/>

	<resultMap type="com.ucap.cloud_web.entity.SpotCheckInfo" id="resultMap"/>

	<sql id="where">
		<where>
			1=1
			<if test="siteCode !=null">
				and site_code=#{siteCode}
			</if>
			<if test="contractInfoId !=null">
				and contract_info_id =#{contractInfoId}
			</if>
		</where>
	</sql>

	<!-- 添加 -->
	<insert id="add" parameterType="com.ucap.cloud_web.entity.SpotCheckInfo" useGeneratedKeys="true" keyProperty="id">
		insert into spot_check_info ( 
			<if test="id != null ">id,</if>
			<if test="siteCode != null ">site_code,</if>
			<if test="contractInfoId != null ">contract_info_id,</if>
			<if test="spotSum != null ">spot_sum,</if>
			<if test="spotNum != null ">spot_num,</if>
			create_time,
			modify_time
		) values (
			<if test="id != null ">#{id},</if>
			<if test="siteCode != null ">#{siteCode},</if>
			<if test="contractInfoId != null ">#{contractInfoId},</if>
			<if test="spotSum != null ">#{spotSum},</if>
			<if test="spotNum != null ">#{spotNum},</if>
			now(),
			now()
		)
	</insert>

	<!-- 查询 -->
	<select id="get" parameterType="int" resultType="com.ucap.cloud_web.entity.SpotCheckInfo">
		select * from spot_check_info where id=#{id}
	</select>

	<!-- 修改 -->
	<update id="update" parameterType="com.ucap.cloud_web.entity.SpotCheckInfo">
		update spot_check_info 
			<trim prefix="SET" suffixOverrides=",">
				<if test="id != null ">id = #{id},</if>
				<if test="siteCode != null ">site_code = #{siteCode},</if>
				<if test="contractInfoId != null ">contract_info_id = #{contractInfoId},</if>
				<if test="spotSum != null ">spot_sum = #{spotSum},</if>
				<if test="spotNum != null ">spot_num = #{spotNum},</if>
				<if test="createTime != null ">create_time = #{createTime},</if>
				<if test="modifyTime != null ">modify_time = #{modifyTime},</if>
			</trim>
			where id=#{id} 
	</update>

	<!-- 删除 -->
	<delete id="delete" parameterType="int">
		delete from spot_check_info where id = #{id}
	</delete>

	<!-- 分页查询 -->
	<select id="query" parameterType="HashMap" resultMap="resultMap">
		select * from spot_check_info
		<include refid="where"/>
		<if test="queryOrderList != null">
			order by
			<foreach collection="queryOrderList" item="queryOrder" separator=",">
				${queryOrder}
			</foreach>
		</if>
		<if test="start != null and pageSize != null">
			limit #{start}, #{pageSize}
		</if>
	</select>
	<select id="queryCount" parameterType="HashMap" resultType="int">
		select count(*) from spot_check_info
		<include refid="where" />
	</select>
	<select id="findBySpotCheckInfoCode" parameterType="HashMap" resultMap="resultMap">
		select * from spot_check_info where site_code=#{siteCode} 
		<if test="queryOrderList != null">
			order by
			<foreach collection="queryOrderList" item="queryOrder" separator=",">
				${queryOrder}
			</foreach>
		</if>
	</select>

</mapper>
