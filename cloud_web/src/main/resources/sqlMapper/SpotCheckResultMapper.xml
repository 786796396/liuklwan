<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ucap.cloud_web.dao.SpotCheckResultDao">

	<cache eviction="LRU" flushInterval="60000" size="1024" readOnly="true"/>

	<resultMap type="com.ucap.cloud_web.entity.SpotCheckResult" id="resultMap"/>

	<sql id="where">
		<where>
			1=1
			<if test="province !=null">
				and province =#{province}
			</if>
			<if test="orgSiteCode !=null">
				and org_site_code=#{orgSiteCode}
			</if>
			<if test="siteCode !=null">
				and site_code =#{siteCode}
			</if>
			<if test="spotCheckSchedule !=null">
				and spot_check_schedule=#{spotCheckSchedule}
			</if>
			<if test="state !=null">
				and state=#{state}
			</if>
			<if test="keyWord !=null">
				and site_name like '%${keyWord}%'
			</if>
			<if test="checkReportResult !=null">
				and check_report_result = ${checkReportResult}
			</if>
			<if test="checkReportResults !=null">
				and check_report_result != ${checkReportResults}
			</if>
			<if test="siteCodes !=null">
				and site_code in
				<foreach collection="siteCodes" item="item" open="(" separator="," close=")">
					#{item}
				</foreach>
			</if>
		</where>
	</sql>

	<!-- 添加 -->
	<insert id="add" parameterType="com.ucap.cloud_web.entity.SpotCheckResult" useGeneratedKeys="true" keyProperty="id">
		insert into spot_check_result ( 
			<if test="id != null ">id,</if>
			<if test="spotCheckSchedule != null ">spot_check_schedule,</if>
			<if test="orgSiteCode != null ">org_site_code,</if>
			<if test="siteCode != null ">site_code,</if>
			<if test="siteName != null ">site_name,</if>
			<if test="url != null ">url,</if>
			<if test="province != null ">province,</if>
			<if test="city != null ">city,</if>
			<if test="county != null ">county,</if>
			<if test="isorganizational != null ">isorganizational,</if>
			<if test="director != null ">director,</if>
			<if test="state != null ">state,</if>
			<if test="checkResult != null ">check_result,</if>
			<if test="checkReportResult != null ">check_report_result,</if>
			create_time,
			modify_time
		) values (
			<if test="id != null ">#{id},</if>
			<if test="spotCheckSchedule != null ">#{spotCheckSchedule},</if>
			<if test="orgSiteCode != null ">#{orgSiteCode},</if>
			<if test="siteCode != null ">#{siteCode},</if>
			<if test="siteName != null ">#{siteName},</if>
			<if test="url != null ">#{url},</if>
			<if test="province != null ">#{province},</if>
			<if test="city != null ">#{city},</if>
			<if test="county != null ">#{county},</if>
			<if test="isorganizational != null ">#{isorganizational},</if>
			<if test="director != null ">#{director},</if>
			<if test="state != null ">#{state},</if>
			<if test="checkResult != null ">#{checkResult},</if>
			<if test="checkReportResult != null ">#{checkReportResult},</if>
			now(),
			now()
		)
	</insert>

	<!-- 查询 -->
	<select id="get" parameterType="int" resultType="com.ucap.cloud_web.entity.SpotCheckResult">
		select * from spot_check_result where id=#{id}
	</select>

	<!-- 修改 -->
	<update id="update" parameterType="com.ucap.cloud_web.entity.SpotCheckResult">
		update spot_check_result 
			<trim prefix="SET" suffixOverrides=",">
				<if test="id != null ">id = #{id},</if>
				<if test="spotCheckSchedule != null ">spot_check_schedule = #{spotCheckSchedule},</if>
				<if test="orgSiteCode != null ">org_site_code = #{orgSiteCode},</if>
				<if test="siteCode != null ">site_code = #{siteCode},</if>
				<if test="siteName != null ">site_name = #{siteName},</if>
				<if test="url != null ">url = #{url},</if>
				<if test="province != null ">province = #{province},</if>
				<if test="city != null ">city = #{city},</if>
				<if test="county != null ">county = #{county},</if>
				<if test="isorganizational != null ">isorganizational = #{isorganizational},</if>
				<if test="director != null ">director = #{director},</if>
				<if test="state != null ">state = #{state},</if>
				<if test="checkResult != null ">check_result = #{checkResult},</if>
				<if test="checkReportResult != null ">check_report_result = #{checkReportResult},</if>
				<if test="createTime != null ">create_time = #{createTime},</if>
				modify_time = now()
			</trim>
			where id=#{id} 
	</update>

	<!-- 删除 -->
	<delete id="delete" parameterType="int">
		delete from spot_check_result where id = #{id}
	</delete>
	
	<!-- 删除 -->
	<delete id="deleteBatchBySchedule" parameterType="int">
		delete from spot_check_result where spot_check_schedule = #{spotCheckSchedule}
	</delete>

	<!-- 分页查询 -->
	<select id="query" parameterType="HashMap" resultMap="resultMap">
		select * from spot_check_result
		<include refid="where"/>
		<if test="queryOrderList != null">
			order by
			<foreach collection="queryOrderList" item="queryOrder" separator=",">
				${queryOrder}
			</foreach>
		</if>

		<if test="start != null and pageSize != null">
			limit #{start}, #{pageSize}
		</if>
	</select>
	<select id="queryCount" parameterType="HashMap" resultType="int">
		select count(*) from spot_check_result
		<include refid="where" />
	</select>
	
	
	<select id="queryByMap" parameterType="HashMap" resultType="com.ucap.cloud_web.dto.SpotCheckResultRequest">
		SELECT 
		  COUNT(id) AS siteNum,
		  province 
		FROM
		  spot_check_result 
		<include refid="where"/>
		group by province
	</select>
	

</mapper>
