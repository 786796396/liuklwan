<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ucap.cloud_web.dao.SysAttachDao">
<!-- 
	<cache eviction="LRU" flushInterval="60000" size="1024" readOnly="true"/>
 -->
	<resultMap type="com.ucap.cloud_web.entity.SysAttach" id="resultMap"/>

	<sql id="where">
		<where>
			1=1
			<if test="tbName != null ">
			 and  tb_name =#{tbName}
			</if>
			<if test="tbKey != null ">
			and  tb_key=#{tbKey}
			</if>
		</where>
	</sql>

	<!-- 添加 -->
	<insert id="add" parameterType="com.ucap.cloud_web.entity.SysAttach" useGeneratedKeys="true" keyProperty="id">
		insert into sys_attach ( 
			<if test="tbName != null ">tb_name,</if>
			<if test="tbKey != null ">tb_key,</if>
			<if test="tbCol != null ">tb_col,</if>
			<if test="path != null ">path,</if>
			<if test="url != null ">url,</if>
			<if test="suffix != null ">suffix,</if>
			<if test="aliasName != null ">alias_name,</if>
			<if test="userId != null ">user_id,</if>
			<if test="modifyUserId != null ">modify_user_id,</if>
			create_time,
			modify_time
		) values (
			<if test="tbName != null ">#{tbName},</if>
			<if test="tbKey != null ">#{tbKey},</if>
			<if test="tbCol != null ">#{tbCol},</if>
			<if test="path != null ">#{path},</if>
			<if test="url != null ">#{url},</if>
			<if test="suffix != null ">#{suffix},</if>
			<if test="aliasName != null ">#{aliasName},</if>
			<if test="userId != null ">#{userId},</if>
			<if test="modifyUserId != null ">#{modifyUserId},</if>
			now(),
			now()
		)
	</insert>

	<!-- 查询 -->
	<select id="get" parameterType="int" resultType="com.ucap.cloud_web.entity.SysAttach">
		select * from sys_attach where id=#{id}
	</select>

	<!-- 修改 -->
	<update id="update" parameterType="com.ucap.cloud_web.entity.SysAttach">
		update sys_attach 
			<trim prefix="SET" suffixOverrides=",">
				<if test="id != null ">id = #{id},</if>
				<if test="tbName != null ">tb_name = #{tbName},</if>
				<if test="tbKey != null ">tb_key = #{tbKey},</if>
				<if test="tbCol != null ">tb_col = #{tbCol},</if>
				<if test="path != null ">path = #{path},</if>
				<if test="url != null ">url = #{url},</if>
				<if test="suffix != null ">suffix = #{suffix},</if>
				<if test="aliasName != null ">alias_name = #{aliasName},</if>
				<if test="userId != null ">user_id = #{userId},</if>
				<if test="modifyUserId != null ">modify_user_id = #{modifyUserId},</if>
				<if test="createTime != null ">create_time = #{createTime},</if>
				<if test="modifyTime != null ">modify_time = #{modifyTime},</if>
			</trim>
			where id=#{id} 
	</update>

	<!-- 删除 -->
	<delete id="delete" parameterType="int">
		delete from sys_attach where id = #{id}
	</delete>

	<!-- 分页查询 -->
	<select id="query" parameterType="HashMap" resultMap="resultMap">
		select * from sys_attach
		<include refid="where"/>
		<if test="queryOrderList != null">
			order by
			<foreach collection="queryOrderList" item="queryOrder" separator=",">
				${queryOrder}
			</foreach>
		</if>
		<if test="start != null and pageSize != null">
			limit #{start}, #{pageSize}
		</if>
	</select>
	<select id="queryCount" parameterType="HashMap" resultType="int">
		select count(*) from sys_attach
		<include refid="where" />
	</select>
	
	<select id="deleteByTbNameAndId" parameterType="HashMap" >
		delete from sys_attach where tb_name = #{tbName} and tb_key = ${tbKey}
	</select>
</mapper>
