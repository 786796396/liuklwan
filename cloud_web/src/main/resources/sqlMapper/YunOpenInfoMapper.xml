				<if test="inCodeCondition != null ">in_code_condition = #{inCodeCondition},</if>
				<if test="inCodeDate != null ">in_code_date = #{inCodeDate},</if>
				<if test="endTask != null ">end_task = #{endTask},</if>
				<if test="isOrg != null ">is_org = #{isOrg},</if>
				<if test="isCost != null ">is_cost = #{isCost},</if>
				<if test="createTime != null ">create_time = #{createTime},</if>
				<if test="modifyTime != null ">modify_time = now(),</if>
