<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ucap.cloud_web.dao.YunSoInfoDao">

	<resultMap type="com.ucap.cloud_web.entity.YunSoInfo"  id="resultMap"/>

	<sql id="where">
		<where>
		<if test="remark != null">
				and site_code like concat('%',#{remark},'%')
		</if>
		<if test="name != null">
				and linkman_name like concat('%',#{name},'%')
		</if>
		<if test="companyName != null">
				and director like concat('%',#{companyName},'%')
		</if>
		</where>
	</sql>

	<!-- 添加 -->
	<insert id="add" parameterType="com.ucap.cloud_web.entity.YunSoInfo" useGeneratedKeys="true" keyProperty="id">
		insert into yun_so_info ( 
			<if test="id != null ">id,</if>
			<if test="databaseInfoId != null ">database_info_id,</if>
			<if test="siteCode != null ">site_code,</if>
			<if test="director != null ">director,</if>
			<if test="linkmanName != null ">linkman_name,</if>
			<if test="telephone != null ">telephone,</if>
			<if test="email != null ">email,</if>
			<if test="serverPro != null ">server_pro,</if>
			<if test="status != null ">status,</if>
			<if test="type != null ">type,</if>
			<if test="sourceType != null ">source_type,</if>
			create_time,
			modify_time
		) values (
			<if test="id != null ">#{id},</if>
			<if test="databaseInfoId != null ">#{databaseInfoId},</if>
			<if test="siteCode != null ">#{siteCode},</if>
			<if test="director != null ">#{director},</if>
			<if test="linkmanName != null ">#{linkmanName},</if>
			<if test="telephone != null ">#{telephone},</if>
			<if test="email != null ">#{email},</if>
			<if test="serverPro != null ">#{serverPro},</if>
			<if test="status != null ">#{status},</if>
			<if test="type != null ">#{type},</if>
			<if test="sourceType != null ">#{sourceType},</if>
			now(),
			now()
		)
		<selectKey resultType="int" keyProperty="id">
			SELECT LAST_INSERT_ID() AS id
		</selectKey>
	</insert>

	<!-- 查询 -->
	<select id="get" parameterType="int" resultType="com.ucap.cloud_web.entity.YunSoInfo">
		select * from yun_so_info where id=#{id}
	</select>

	<!-- 修改 -->
	<update id="update" parameterType="com.ucap.cloud_web.entity.YunSoInfo">
		update yun_so_info 
			<trim prefix="SET" suffixOverrides=",">
				<if test="id != null ">id = #{id},</if>
				<if test="databaseInfoId != null ">database_info_id = #{databaseInfoId},</if>
				<if test="siteCode != null ">site_code = #{siteCode},</if>
				<if test="director != null ">director = #{director},</if>
				<if test="linkmanName != null ">linkman_name = #{linkmanName},</if>
				<if test="telephone != null ">telephone = #{telephone},</if>
				<if test="email != null ">email = #{email},</if>
				<if test="serverPro != null ">server_pro = #{serverPro},</if>
				<if test="status != null ">status = #{status},</if>
				<if test="type != null ">type = #{type},</if>
				<if test="createTime != null ">create_time = #{createTime},</if>
				<if test="modifyTime != null ">modify_time = #{modifyTime},</if>
			</trim>
			where id=#{id} 
	</update>

	<!-- 删除 -->
	<delete id="delete" parameterType="int">
		delete from yun_so_info where id = #{id}
	</delete>

	<!-- 分页查询 -->
	<select id="query" parameterType="HashMap" resultMap="resultMap">
		select * from yun_so_info
		<include refid="where"/>
		<if test="queryOrderList != null">
			order by
			<foreach collection="queryOrderList" item="queryOrder" separator=",">
				${queryOrder}
			</foreach>
		</if>
		<if test="start != null and pageSize != null">
			limit #{start}, #{pageSize}
		</if>
	</select>
	<select id="queryCount" parameterType="HashMap" resultType="int">
		select count(*) from yun_so_info
		<include refid="where" />
	</select>
	

</mapper>
